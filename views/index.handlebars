<h1 class="text-center text-light">Burgers!</h1>

<div class="row">
                     <div class="col-md-6">
<h2 class="text-light">Burgers to be eaten!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burgers-block devoured=true}} --}}
<div class='card align-left'>
  <div class='card-body'>
    <div class="row">
                     <div class="col-md-6">
       {{this.burger_name}}
       </div>
       <div class="col-md-6">
       <form class="update-form">
    <div class="form-group">
   
    <input type="button" class="btn btn-success" value="Devoured it!" id={{this.id}} name={{this.burger_name}}>
    </div>
  </div>
  </form>
</div>

    </div>
    
    {{/unless}}
   
  {{/each}}
</ul>

</div>
<div class="col-md-6">
  <h2 class="text-light">Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     {{!--  {{> burgers/burgers-block devoured=false}} --}}
   <div class='card'>
  <div class='card-body'>
      {{this.burger_name}}
</div>
    </div>
    {{/if}}
    
  {{/each}}
</ul>
</div>

</div>


<div class="row">
  <div class="col">
  <h2 class="text-light text-center align-middle">Add a Burger</h2>
  </div>
  </div>

  <div class="row text-center align-middle">
    <div class="col">
    <form class="create-form">

  <div class="form-group">
    <textarea class="form-control" id="ca" name="name" rows="3"></textarea>
  </div>


  <input type="submit" class="btn btn-primary" value="Add Burger!">
  </div>

</form>
</div>

